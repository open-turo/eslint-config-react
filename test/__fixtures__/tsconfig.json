{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "composite": true,
    "declaration": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "include": ["./component.jsx"]
}
